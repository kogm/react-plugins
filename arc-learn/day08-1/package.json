{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start-csr:express": "better-npm-run startcsr:client",
    "build-csr:client": "npm run clear && better-npm-run buildcsr:client",
    "start-ssr:express": "npm-run-all build-ssr sev-ssr:express",
    "sev-ssr:express": "better-npm-run startssr:express",
    "build-ssr": "npm run clear && npm run build-ssr:client && npm run build-ssr:server",
    "build-ssr:client": "better-npm-run buildssr:client",
    "build-ssr:server": "better-npm-run buildssr:server",
    "clear": "rimraf dist"
  },
  "betterScripts": {
    "startcsr:client": {
      "command": "node -r @babel/register webpack/reload/express-reload.js",
      "env": {
        "NODE_ENV": "development",
        "HOST": "localhost",
        "PORT": 3001,
        "THEME": {
          "primary-color": "#03b39b"
        }
      }
    },
    "startssr:express": {
      "command": "nodemon -r @babel/register server/express/index.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3002,
        "THEME": {
          "primary-color": "#03b39b"
        }
      }
    },
    "buildcsr:client": {
      "command": "webpack -r @babel/register --config ./webpack/webpack.config.client.prod.js",
      "env": {
        "NODE_ENV": "development",
        "THEME": {
          "primary-color": "#03b39b"
        }
      }
    },
    "buildssr:client": {
      "command": "webpack -r @babel/register --config ./webpack/webpack.ssr.client.prod.js",
      "env": {
        "NODE_ENV": "production",
        "THEME": {
          "primary-color": "#03b39b"
        }
      }
    },
    "buildssr:server": {
      "command": "webpack -r @babel/register --config ./webpack/webpack.ssr.server.prod.js",
      "env": {
        "NODE_ENV": "production",
        "THEME": {
          "primary-color": "#03b39b"
        }
      }
    }
  },
  "author": "kogm",
  "license": "ISC",
  "dependencies": {
    "@hot-loader/react-dom": "^16.8.6",
    "@loadable/component": "^5.9.0",
    "@loadable/server": "^5.9.0",
    "axios": "^0.18.0",
    "core-js": "^2.6.5",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "immutable": "^4.0.0-rc.12",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "promise.prototype.finally": "^3.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^7.0.2",
    "react-router-config": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-immutable": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.0.2",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@loadable/babel-plugin": "^5.8.0",
    "@loadable/webpack-plugin": "^5.7.1",
    "autoprefixer": "^9.4.4",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-import": "^1.11.0",
    "better-npm-run": "^0.1.1",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.0",
    "ejs-compiled-loader": "^1.1.0",
    "glob": "^7.1.4",
    "html-webpack-plugin": "^3.2.0",
    "isomorphic-style-loader": "^4.0.0",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.6.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "postcss-color-function": "^4.0.1",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "react-hot-loader": "^4.6.3",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.0",
    "webpack-dev-middleware": "^3.6.2",
    "webpack-hot-middleware": "^2.24.4",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
